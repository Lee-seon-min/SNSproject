<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0EEEE"
    android:id="@+id/postingParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/writerInfo"
            android:layout_margin="5dp"
            android:background="@drawable/main_bottom_border_effector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    card_view:cardCornerRadius="100dp">
                    <ImageView
                        android:id="@+id/writerProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/writerName"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/menuImageView"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/backstyle2"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/titleBox"
        android:layout_below="@+id/writerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="4dp"
            android:id="@+id/postedTitle"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/titleBox"
            android:orientation="vertical"
            android:id="@+id/postedMediaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    <LinearLayout
        android:elevation="5dp"
        android:id="@+id/contentsParentLayout"
        android:background="@drawable/backstyle4"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_below="@+id/postedMediaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:text="contents"
            android:id="@+id/postedContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/backstyle3"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/contentsParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/commentsWriteEditText"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="댓글쓰기"/>
            <Button
                android:id="@+id/commentsSaveButton"
                android:textColor="#53A39C"
                android:text="게시"
                android:background="#ffffff"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/commentsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>